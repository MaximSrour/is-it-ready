{
  "name": "is-it-ready",
  "author": "Maxim Srour",
  "version": "1.1.8",
  "description": "CLI that runs your project's formatting, linting, tests, inventory, and security checks in one dashboard.",
  "keywords": [
    "cli",
    "checks",
    "lint",
    "prettier",
    "typescript",
    "vitest",
    "knip",
    "audit"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MaximSrour/is-it-ready.git"
  },
  "bugs": {
    "url": "https://github.com/MaximSrour/is-it-ready/issues"
  },
  "homepage": "https://github.com/MaximSrour/is-it-ready#readme",
  "type": "commonjs",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "bin": {
    "is-it-ready": "dist/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && node -e \"require('fs').copyFileSync('src/help.md', 'dist/help.md')\"",
    "clean": "rm -rf dist",
    "release": "semantic-release",
    "knip": "knip",
    "knip:loose": "KNIP_MODE=loose knip",
    "knip:fix": "knip --fix",
    "lint": "eslint src",
    "lint:loose": "ESLINT_MODE=loose eslint src",
    "lint:fix": "eslint --fix src",
    "markdownlint": "markdownlint-cli2 \"**/*.md\" \"!CHANGELOG.md\" \"!dist\" \"!node_modules\"",
    "markdownlint:fix": "markdownlint-cli2 --fix \"**/*.md\" \"!CHANGELOG.md\" \"!dist\" \"!node_modules\"",
    "prettier": "prettier --check 'src/**/*.{js,ts,mjs,cjs,json}' '*.{js,ts,mjs,cjs,json}'",
    "prettier:fix": "prettier --write 'src/**/*.{js,ts,mjs,cjs,json}' '*.{js,ts,mjs,cjs,json}'",
    "prettier:watch": "chokidar \"src/**/*.{js,ts,mjs,cjs,json}\" \"*.{js,ts,mjs,cjs,json}\" -c \"npm run --silent prettier:fix\"",
    "test": "vitest",
    "type-check": "tsc --noEmit",
    "check": "ts-node --transpile-only src/index.ts",
    "check:loose": "ts-node --transpile-only src/index.ts --loose"
  },
  "dependencies": {
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "chokidar-cli": "^3.0.0",
    "eslint": "^9.39.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "knip": "^5.71.0",
    "markdownlint-cli2": "^0.20.0",
    "prettier": "^3.7.4",
    "semantic-release": "^25.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.15"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.eslint.json"
    }
  }
}
